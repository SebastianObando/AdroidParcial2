<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoProgramasActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/texto_programa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombre del programa"
        android:textSize="30dp"
        android:layout_margin="10dp"

        />

    <TextView
        android:id="@+id/snies_programa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SNIES programa"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/quantity_programa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Creditos programa"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/facultad_programa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Facultad programa"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/texto_programa_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Listas"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesores"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/btn_lista_profesores"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/btn_lista_estudiantes"
        android:onClick="irListaProfesores"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espacios academicos"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:id="@+id/btn_lista_espacios_academicos"
        />
</LinearLayout>