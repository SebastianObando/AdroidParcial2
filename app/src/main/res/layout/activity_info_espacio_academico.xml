<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InfoEspacioAcademicoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/codigo_espacio_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Codigo Espacio"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/nombre_espacio_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombre Espacio"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/creditos_espacio_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Creditos Espacio"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/modalidad_espacio_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Modalidad Espacio"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/semestre_espacio_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Semestre Espacio"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />

</LinearLayout>